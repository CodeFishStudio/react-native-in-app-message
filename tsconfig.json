{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "target": "esnext",
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ],
    "jsx": "react-native",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  }
}
